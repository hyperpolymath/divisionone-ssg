{
  "$schema": "https://claude.ai/schemas/hooks.json",
  "version": "1.0.0",
  "description": "Claude Code hooks for Division One SSG",

  "hooks": {
    "session-start": {
      "enabled": true,
      "description": "Initialize session with adapter context",
      "commands": [
        {
          "command": "echo 'Division One SSG - 28 SSG Adapters'",
          "description": "Display project info"
        }
      ]
    },

    "pre-commit": {
      "enabled": true,
      "description": "Run checks before commit",
      "commands": [
        {
          "command": "deno fmt --check adapters/",
          "description": "Check formatting",
          "on_failure": "block"
        },
        {
          "command": "deno lint adapters/",
          "description": "Run linter",
          "on_failure": "block"
        }
      ]
    },

    "pre-push": {
      "enabled": true,
      "description": "Run full checks before push",
      "commands": [
        {
          "command": "deno test --allow-run --allow-read 2>/dev/null || echo 'No tests yet'",
          "description": "Run tests",
          "on_failure": "warn"
        }
      ]
    },

    "post-file-edit": {
      "enabled": true,
      "description": "Validate after adapter edits",
      "patterns": ["adapters/*.js"],
      "commands": [
        {
          "command": "deno lint $FILE",
          "description": "Lint edited adapter"
        }
      ]
    }
  },

  "context": {
    "project_type": "ssg-adapter-collection",
    "runtime": "deno",
    "adapter_count": 28,
    "languages_supported": 17
  }
}
